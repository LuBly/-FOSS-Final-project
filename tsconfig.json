{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES5",
		"sourceMap": true,
		"baseUrl": "./src",
		"outDir": "dist",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"noImplicitAny": false,
		"paths": { "*": ["node_modules/*"] }
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}